@page
@model ProjParkNet.Pages.UserPage.PaymentConfirmationModel
@{
    ViewData["Title"] = "Confirmação de Pagamento";
}

<h1>Confirmação de Pagamento</h1>
<br/>
<br/>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Ticket -->
            <div class="card mb-4">
                <div class="card-header text-center">
                    <h5>Ticket de Saída</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Matrícula:</dt>
                        <dd class="col-sm-8">@Model.Matricula</dd>

                        <dt class="col-sm-4">Tipo de Veículo:</dt>
                        <dd class="col-sm-8">@Model.TypeVehicle</dd>

                        <dt class="col-sm-4">Entrada:</dt>
                        <dd class="col-sm-8">@Model.EntryTime.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Saída:</dt>
                        <dd class="col-sm-8">@Model.ExitTime.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Valor Pago:</dt>
                        <dd class="col-sm-8">@Model.AmountPaid.ToString("C")</dd>

                        <dt class="col-sm-4">Método de Pagamento:</dt>
                        <dd class="col-sm-8">@Model.PaymentMethod</dd>

                        <dt class="col-sm-4">Código de Barras:</dt>
                        <dd class="col-sm-8">
                            <div style="font-family: monospace; font-size: 1.2em; text-align: center;">
                                @Model.Barcode
                            </div>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Botões -->
            <div class="text-center">
                <button class="btn btn-primary me-2" onclick="printTicket()">Imprimir Ticket</button>
                <a href="/UserPage/UserManager" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>

<!-- Script para Simular Impressão -->
<script>
    function printTicket() {
        window.print();
    }
</script>